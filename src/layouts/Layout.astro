---
// import Navbar from "../components/Navbar.astro"

export interface Props {
    title?: string;
}

const { title } = Astro.props;
const pageTitle = title ? `${title}` : "Favicon.Land";
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
    </head>
    <body>
        <!-- <Navbar /> -->
        <nav>
            <a href="/">Home</a>
            <!-- search -->
            <a href="/create">new icon</a>
            <input type="text" placeholder="Search" />
            <a href="/login">Login</a>
            <a href="/logup">Logup</a>
            <a href="/api/v1/logout">Log out</a>
        </nav>
        <main>
            <slot />
        </main>
        <footer>
            <p>
                Â© {year} Favicon.Land. All rights reserved.
                <a href="/about">about</a>
                <a href="/contact">contact</a>
                <a href="/privacy">privacy</a>
                <a href="/terms">terms</a>
            </p>
        </footer>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        min-width: 400px;
        width: 100%;
        height: 100%;
        /* background-color: #080808; */
        /* color: #d2cec8; */
        font-family: sans-serif;
    }

    body {
        padding-top: 60px; /* Space for fixed navbar */
    }

    main {
        min-height: calc(100vh - 60px); /* Full height minus navbar */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    /* Make navbar fixed at top */
    body :global(nav) {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        /* background-color: rgba(8, 8, 8, 0.95); */
        backdrop-filter: blur(10px);
        border-bottom: 1px solid #333;
        padding: 1rem 2rem;
        display: flex;
        gap: 2rem;
        align-items: center;
        height: 60px;
        box-sizing: border-box;
    }

    /* Style navbar links */
    body :global(nav a) {
        /* color: #d2cec8; */
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        transition: all 0.2s ease;
        font-weight: 500;
    }

    body :global(nav a:hover) {
        /* background-color: rgba(29, 161, 242, 0.1); */
        color: slateblue;
    }

    /* Special styling for logout link */
    body :global(nav a[href="/api/v1/log/out"]) {
        color: #f87171;
    }

    body :global(nav a[href="/api/v1/log/out"]:hover) {
        /* background-color: rgba(248, 113, 113, 0.1); */
        color: #f87171;
    }
</style>
