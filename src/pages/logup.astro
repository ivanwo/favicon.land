---
import Layout from "../layouts/Layout.astro";

const user = Astro.locals.user;
if (user) {
    return Astro.redirect("/");
}
---

<Layout title="logup | favicon.land">
    <main class="flex-center">
        <div class="login-container">
            <div class="glass-panel login-card">
                <div class="header">
                    <h1>logup</h1>
                    <p>travel to favicon.land today</p>
                </div>

                <div id="error" class="error-message" style="display: none;">
                </div>
                <div
                    id="success"
                    class="success-message"
                    style="display: none;"
                >
                </div>

                <form id="registerForm" class="login-form">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input
                            type="text"
                            id="username"
                            name="username"
                            placeholder="username"
                            required
                            minlength="3"
                            maxlength="16"
                            pattern="[a-zA-Z0-9]+"
                            autocomplete="username"
                            autocapitalize="off"
                        />
                        <small
                            style="opacity: 0.7; font-size: 0.8rem; margin-top: 0.25rem;"
                            >3-16 characters, letters and numbers only</small
                        >
                    </div>

                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            placeholder="you@company.com"
                            required
                            autocomplete="email"
                        />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            placeholder="••••••••"
                            required
                            minlength="6"
                            autocomplete="new-password"
                        />
                        <small
                            style="opacity: 0.7; font-size: 0.8rem; margin-top: 0.25rem;"
                            >At least 6 characters</small
                        >
                    </div>

                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input
                            type="password"
                            id="password2"
                            name="password2"
                            placeholder="••••••••"
                            required
                            minlength="6"
                            autocomplete="new-password"
                        />
                    </div>

                    <button type="submit" class="btn btn-primary full-width"
                        >Sign up</button
                    >
                </form>
                <p class="signup-link">
                    Already have an account? <a href="/login">Sign in</a>
                </p>
            </div>
        </div>
    </main>

    <script>
        const form = document.getElementById("registerForm");
        const errorDiv = document.getElementById("error");
        const successDiv = document.getElementById("success");

        if (form && errorDiv && successDiv) {
            form.addEventListener("submit", async (e) => {
                e.preventDefault();

                // @ts-ignore
                const formData = new FormData(e.target);
                const data = Object.fromEntries(formData.entries());

                // Client-side validation
                if (data.password !== data.password2) {
                    showError("Passwords do not match");
                    return;
                }

                try {
                    const response = await fetch("/api/v1/logup", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(data),
                    });

                    const result = await response.json();

                    if (response.ok) {
                        showSuccess(result.message);

                        // Redirect after a short delay
                        setTimeout(() => {
                            window.location.href = "/";
                        }, 1000);
                    } else {
                        showError(result.error || "Registration failed");
                    }
                } catch (error) {
                    showError("An error occurred. Please try again.");
                }
            });

            // @ts-ignore
            function showError(msg) {
                if (errorDiv && successDiv) {
                    errorDiv.textContent = msg;
                    errorDiv.style.display = "block";
                    successDiv.style.display = "none";
                }
            }

            // @ts-ignore
            function showSuccess(msg) {
                if (successDiv && errorDiv) {
                    successDiv.textContent = msg;
                    successDiv.style.display = "block";
                    errorDiv.style.display = "none";
                }
            }
        }
    </script>
</Layout>

<style>
    main {
        min-height: 100vh;
        padding-top: 6rem;
        padding-bottom: 4rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-container {
        width: 100%;
        max-width: 440px;
        padding: 1rem;
    }

    .login-card {
        padding: 2.5rem;
    }

    .header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .header h1 {
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
        color: var(--text-heading);
    }

    .header p {
        color: var(--text-muted);
        font-size: 0.95rem;
    }

    .login-form {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        text-align: left;
    }

    label {
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--text-main);
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--glass-border);
        color: var(--text-main);
        font-size: 1rem;
        transition: all 0.2s;
    }

    input:focus {
        outline: none;
        border-color: var(--primary);
        background: rgba(255, 255, 255, 0.05);
    }

    .full-width {
        width: 100%;
    }

    .divider {
        margin: 2rem 0;
        position: relative;
        text-align: center;
    }

    .divider::before {
        content: "";
        position: absolute;
        left: 0;
        top: 50%;
        width: 100%;
        height: 1px;
        background: var(--glass-border);
    }

    .divider span {
        position: relative;
        padding: 0 0.75rem;
        color: var(--text-muted);
        font-size: 0.85rem;
        background-color: #0c1221; /* Dark background to cover line */
        /* Note: Ideally this should match body bg exactly */
    }

    .social-login {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .signup-link {
        text-align: center;
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .signup-link a {
        color: var(--primary);
        font-weight: 600;
    }

    .error-message {
        background: rgba(220, 38, 38, 0.1);
        border: 1px solid rgba(220, 38, 38, 0.2);
        color: #ef4444;
        padding: 0.75rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        text-align: center;
    }

    .success-message {
        background: rgba(22, 163, 74, 0.1);
        border: 1px solid rgba(22, 163, 74, 0.2);
        color: #22c55e;
        padding: 0.75rem;
        border-radius: 0.5rem;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
        text-align: center;
    }
</style>
